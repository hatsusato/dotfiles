#!/bin/bash

set -eu
source "${BASH_SOURCE%/*}"/function/error.sh
source "${BASH_SOURCE%/*}"/function/mkdir-userbin

usage() {
  cat <<EOF >&2
USAGE: ${0##*/} [KEYMAP]
    load KEYMAP file
    load last keymap if KEYMAP is omitted
    KEYMAP is at '$xkbdir' if relative
EOF
  exit 1
}
set-default() {
  local keymap
  case $1 in
    -*) usage;;
    /*) keymap=$1;;
    *) keymap=$xkbdir/$1;;
  esac
  [[ -f $keymap ]] || error file not found: "$keymap"
  ln -sf "$keymap" "$default"
}
load() {
  local dir
  dir=$(mkdir-userbin xkb-load) || exit
  [[ -f $default ]] || error file not found: "$default"
  xkbcomp -I"$xkbdir" "$default" "${DISPLAY-:0}" 2>"$dir"/log
}
main() {
  local xkbdir=$HOME/.config/local/.xkb
  local default=$xkbdir/.default.xkb
  (($# == 0 || $# == 1)) || usage
  (($# == 1)) && set-default "$1"
  load
}

main "$@"
