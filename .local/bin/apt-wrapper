#!/bin/bash

set -eu

has-option() {
  local arg
  for arg; do
    [[ $arg == -* ]] && return
  done
  return 1
}
apt-install() {
  has-option "$@" && return
  [[ ${1-} == install ]] || return 0
  shift
  apt-is-installed "$@" && exit
  if $sudo apt install "$@"; then
    apt-register "$@"
    exit
  else
    exit
  fi
}
set-sudo() {
  if command -v sudo-askpass >/dev/null; then
    sudo=sudo-askpass
  else
    sudo=sudo
  fi
}
main() {
  local sudo=
  if [[ ${1-} == --sudo ]]; then
    shift
    set-sudo
  fi
  apt-install "$@"
  $sudo apt "$@"
}

main "$@"
