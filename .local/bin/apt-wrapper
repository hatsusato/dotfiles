#!/bin/bash

set -eu
source "${BASH_SOURCE%/*}"/function/error.sh

sudo-apt() {
  sudo-askpass apt "$@"
}
show-dpkg() {
  dpkg --no-pager -l "$@" 2>/dev/null | tail -n+6
}
is-installed() {
  local pkg
  for pkg; do
    show-dpkg "$pkg" | grep -q ^ii || return
  done
}
append() {
  local pkg log=$HOME/.config/local/.install
  [[ -f $log ]] || error file not found: "$log"
  for pkg; do
    grep -xq -e "$pkg" "$log" &>/dev/null && continue
    tee -a "$log" <<<"$pkg" >/dev/null
  done
}
has-option() {
  local arg
  for arg; do
    [[ $arg == -* ]] && return
  done
  return 1
}
main() {
  if [[ ${1-} != install ]] || has-option "$@"; then
    sudo-apt "$@"
  else
    shift
    is-installed "$@" && return
    sudo-apt install "$@"
    append "$@"
  fi
}

main "$@"
