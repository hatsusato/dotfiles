#!/bin/bash

set -eu
source "${BASH_SOURCE%/*}"/function/error.sh

has-option() {
  local arg
  for arg; do
    [[ $arg == -* ]] && return
  done
  return 1
}
show-dpkg() {
  dpkg -l "$pkg" 2>/dev/null | tail -n+6
}
is-installed() {
  local pkg
  for pkg; do
    show-dpkg | grep -q ^ii || return
  done
}
register-pkgs() {
  local log pkg
  log=$HOME/.config/local/.install
  [[ -w $log ]] || error file not writable: "$log"
  for pkg; do
    grep -qx "$pkg" "$log" &>/dev/null && continue
    tee -a "$log" <<<"$pkg" >/dev/null
  done
}
apt-install() {
  has-option "$@" && return 1
  [[ ${1-} == install ]] || return
  shift
  is-installed "$@" && return
  $sudo apt install "$@" || exit
  register-pkgs "$@"
}
set-sudo() {
  if command -v sudo-askpass >/dev/null; then
    sudo=sudo-askpass
  else
    sudo=sudo
  fi
}
main() {
  local sudo=
  if [[ ${1-} == --sudo ]]; then
    shift
    set-sudo
  fi
  apt-install "$@" && exit
  $sudo apt "$@"
}

main "$@"
