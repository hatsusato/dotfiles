#!/bin/bash
# apt: pinentry-gnome3

set -eu

error() {
  cat <<EOF >&2
ERROR: $@
EOF
  exit 1
}
protocol() {
  local desc="[sudo] password for $USER: "
  cat <<EOF
SETPROMPT Authentication Required
SETDESC ${1-$desc}
SETOK Authenticate
GETPIN
BYE
EOF
}
unescape() {
  line=${line#D }
  line=${line//\\/\\x5C}
  line=${line//%/\\x}
}
process() {
  local IFS= line cancel='ERR 83886179 Operation cancelled'
  while read -r line; do
    [[ $line == OK ]] && continue
    [[ $line == @(OK )* ]] && continue
    [[ $line == $cancel* ]] && exit 255
    [[ $line == @(D )* ]] || error unknown response: "$line"
    unescape
    echo -e "$line"
  done
}
main() {
  protocol "$@" | pinentry-gnome3 | process
}

main "$@"
