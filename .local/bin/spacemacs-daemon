#!/bin/bash

set -eu
source "${BASH_SOURCE%/*}"/function/error.sh
source "${BASH_SOURCE%/*}"/function/mkdir-userbin

check-running() {
  spacemacs-exists && :
  case $? in
    1) return 0;;
    *) exit;;
  esac
}
clean() {
  rm -fr "$lock"
}
prepare() {
  local dir
  dir=$(mkdir-userbin spacemacs) || exit
  lock=$dir/lock
  log=$dir/daemon.log
  mkdir -m700 "$lock" 2>/dev/null
}
main() {
  local lock log
  check-running
  prepare || error failed to retrieve lock: "$lock"
  (
    trap clean EXIT
    exec -a spacemacs emacs --daemon 2>"$log" &
  )
}

main
